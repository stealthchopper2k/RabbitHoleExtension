{
    "env": {
        "webextensions": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "consistent-return": 2,
        "indent"           : [1, 2],
        "no-else-return"   : 1,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2,
        "semi-style": ["error", "last"],
        "quotes": [2, "double"],
        "@typescript-eslint/no-var-requires": 0
        // "@html-eslint/indent": ["error", 2]
    }
}
